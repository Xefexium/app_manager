# Default server configuration
#
server {
	server_name smalltimegaming.com www.smalltimegaming.com; # managed by Certbot
		
	listen [::]:443 ssl ipv6only=on; # managed by Certbot
        listen 443 ssl; # managed by Certbot
	
	location /api/ {
		proxy_pass http://localhost:8000;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header X-Forwarded-Proto $scheme;
	}

	location / {
		index index.html index.htm index.nginx-debian.html;
		root /var/www/html;
		proxy_pass http://localhost:3000;
		proxy_set_header Host $host;
	        proxy_set_header X-Real-IP $remote_addr;
	        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	        proxy_set_header X-Forwarded-Proto $scheme;
		try_files $uri $uri/ =404;
	}

	ssl_certificate /etc/letsencrypt/live/smalltimegaming.com/fullchain.pem; # managed by Certbot
	ssl_certificate_key /etc/letsencrypt/live/smalltimegaming.com/privkey.pem; # managed by Certbot
}
